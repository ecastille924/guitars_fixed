<h1><%= @technician.name %></h1>

<ul>
<% @technician.repair_bills.each do |r| %>
    <li><%= r.year_brand_model %></li>
    <small><BLOCKQUOTE><%= r.reason_for_repair %></BLOCKQUOTE></small>
<% end %>
</ul>
<br>
Reviews:
<ol>
<% @technician.reviews.each do |r| %>
    <li> <small><i><%= r.content %></i></small> </li>
<% end %>
</ol>
<% if current_user %>
    <%= link_to "Write Review", new_technician_review_path(@technician.id) %>
<% end %>