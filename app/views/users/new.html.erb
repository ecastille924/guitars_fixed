<h1>Sign Up</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
    <p><%= pluralize(@user.errors.count, "error")%> prohibited account creation:</p>
    <ul>
        <% @user.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %> 
    </ul>
<% end %>

<%= form_for(@user) do |t| %>
    <%= t.label :username, "Username:" %>
    <%= t.text_field :username %><br><br>
    <%= t.label :email, "Email:" %>
    <%= t.text_field :email %><br><br>
    <%= t.label :password, "Password:" %>
    <%= t.password_field :password %><br><br>
    <%= t.submit "Create GuitarsFixed Account" %>
<% end %>
<br>
<%= button_to("Log In With Google", '/auth/google_oauth2') %>